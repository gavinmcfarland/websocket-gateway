{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "bundler",
        "outDir": "dist",
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
